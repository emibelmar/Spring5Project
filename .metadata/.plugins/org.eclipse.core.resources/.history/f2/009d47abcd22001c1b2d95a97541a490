<html xlmns:th="http://www.thymeleaf.org">

<head>
	<meta charset="UTF-8">
	<title th:text="${titulo}" />
</head>

<body>
	<h1 th:text="${titulo}" />
	<h3 th:text="${factura.descripcion}" />
	<div> Cliente: <span th:text="${factura.cliente.nombre + ' ' + factura.cliente.apellido}" /></div>
	<h4>Detalle de la factura</h4>
	<table>
		<thead>
			<tr>
				<th>Producto</th>
				<th>Precio</th>
				<th>Cantidad</th>
				<th>Total</th>
			</tr>
		</thead>
		<tbody>
			<tr th:each="item: ${factura.items}">
				<td th:text="${item.producto.nombre}" />
				<td th:text="${item.producto.precio}" />
				<td th:text="${item.cantidad}" />
				<td th:text="${item.producto.precio * item.cantidad}" />
			</tr>
			</tr>
		</tbody>
	</table>
</body>

</html>